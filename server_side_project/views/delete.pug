doctype html
html
  head
    meta(charset='utf-8')
  body
    h1
      a(href='/') Server Side Javascript
    ul
      each topic in topics
        li
          - rid = encodeURIComponent(topic['@rid'])
          a(href='/'+rid)= topic.title
    aticle
    h1= 'Delete? '+topic.title
      - rid = encodeURIComponent(topic['@rid'])
      form(action='/'+rid+'/delete', method='post')
        p
          input(type='submit' value='YES')
      a(href='/'+rid) No
